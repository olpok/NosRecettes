{% extends 'base.html.twig' %}

{% block title %}Ingrédients{% endblock %}

{% block body %}
<h1> Gérer les ingrédients</h1>

{% for message in app.flashes('success') %}
<div class="alert alert-success">
    {{message}}
</div>
{% endfor %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for ingredient in ingredients %}
        <tr>
            <td>{{ ingredient.name }}</td>
            <td>
                <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-secondary">Editer</a>
                {{ include('ingredient/_delete_form.html.twig') }}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<div class="text-right">
    <a href=" {{ path('ingredient_new') }}" class="btn btn-primary">Créer un nouvel ingrédient</a>
</div>
{% endblock %}